        <Button WidthRequest="120" HeightRequest="120" Text="Hundspetersilie" Clicked="WeedButton_Clicked"/>
        <Button WidthRequest="120" HeightRequest="120" Text="Gras" Clicked="WeedButton_Clicked"/>
