    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Priority="0" Order="Primary" Clicked="ToolbarItemSave_Clicked"/>
        <ToolbarItem Text="Clear" Priority="1" Order="Primary" Clicked="ToolbarItemClear_ClickedAsync" />
        <ToolbarItem Text="Export" Priority="1" Order="Secondary" Clicked="ToolbarItemExport_Clicked"/>
        

    </ContentPage.ToolbarItems>
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Latitudde:" HorizontalOptions="Start" Padding="10"/>
            <Label x:Name="lblLat" Text="{Binding lat}" HorizontalOptions="StartAndExpand" Padding="10"/>
            <Label Text="Longitude:" HorizontalOptions="End" Padding="10"/>
            <Label x:Name="lblLong" Text="{Binding lon}" HorizontalOptions="EndAndExpand" Padding="10"/>
        </StackLayout>
        <FlexLayout Wrap="Wrap" JustifyContent="SpaceAround" VerticalOptions="Fill" Direction="Row" x:Name="flButtons">
        <!--
            <Button WidthRequest="120" HeightRequest="120" Text="Distel" Clicked="WeedButton_Clicked" CornerRadius="-1"/>
